extends ../layout

block content
  .container-fluid.bg-primary.py-5.mb-5.page-header
    .container.py-5
      .row.justify-content-center
        .col-lg-10.text-center
          h1.display-3.text-white.animated.slideInDown= title
          nav(aria-label='breadcrumb')
            ol.breadcrumb.justify-content-center
              li.breadcrumb-item
                a.text-white(href='/') #{t("home.home")}
              li.breadcrumb-item
                a.text-white(href=pageUrl) #{title}
